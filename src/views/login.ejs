<% include header %>
<h1 class="page-title"> <%= title %></h1>
<div class="offset-md-3 col-md-6">
  <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
  <% } %>
  <form action="/account/login" method="post" role="form" class="signupForm">
    <div class="form-group">
      <input type="username" class="form-control" name="username" id="username" placeholder="Username" data-rule="minlen:4" data-msg="Please enter a username">
      <div class="validation"></div>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="password" id="password" placeholder="Password" data-rule="minlen:4" data-msg="Please enter at least 8 letters/numbers">
      <div class="validation"></div>
    </div>
    <div class="text-center"><button type="submit">Login</button></div>
  </form>
</div>
</body>
<% include footer %>
